<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <ImageView
        android:id="@+id/iv_ir_item_img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ir_item_title"
        android:layout_width="wrap_content"
        android:maxWidth="240dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_ir_item_time"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/iv_ir_item_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="微全部信红包-退款" />

    <TextView
        android:id="@+id/tv_ir_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_ir_item_title"
        app:layout_constraintTop_toBottomOf="@id/tv_ir_item_title"
        tools:text="10月12日 13:09" />

    <TextView
        android:id="@+id/tv_ir_item_money"
        app:layout_constraintTop_toTopOf="@id/tv_ir_item_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        tools:text="+100000"
        android:textSize="16sp"
        android:textColor="#e1af28"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="0dp"
        android:background="@color/item_line"
        app:layout_constraintLeft_toLeftOf="@id/tv_ir_item_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="1dp"/>
</android.support.constraint.ConstraintLayout>