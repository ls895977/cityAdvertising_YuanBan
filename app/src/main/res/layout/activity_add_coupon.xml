<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:paddingTop="19dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:onClick="backClick"
                android:padding="9dp"
                android:src="@mipmap/icon_back"
                android:tint="@color/textColor" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:textColor="@color/tv_black"
                android:textSize="20sp"/>


        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_add_cp_pic"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_marginRight="16dp"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/fl_add_cp"
                android:layout_width="108dp"
                android:layout_height="53dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_add_ad_next">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ic_launcher" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_add_cp"
                android:layout_marginLeft="42dp"
                android:text="添加您的图"
                android:textColor="@color/tv_hint"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_add_cp_icon"
                android:layout_width="37dp"
                android:layout_height="31dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="72dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"
                android:layout_below="@id/iv_add_cp_icon"
                android:text="一券一客户     一券一人生"
                android:textColor="@color/tv_black"
                android:layout_marginRight="22dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/tv_hint"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:text="做中国最大的实体店券平台"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#b5b4ba"
            android:text="设置您的券"
            android:padding="14dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_ad_title"
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icom_home_all_money"
                android:layout_height="16dp"/>

            <EditText
                android:id="@+id/et_cp_title"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/iv_ad_title"
                android:background="@null"
                android:hint="添加券名称"
                android:textColorHint="@color/tv_hint"
                android:textSize="16sp"
                android:textColor="@color/tv_black"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/line"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_ad_title"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cp_type"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_cp_type"
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icom_home_all_money"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/et_cp_type"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/iv_cp_type"
                android:text="选择券类别"
                android:textColor="@color/tv_black"
                android:layout_centerVertical="true"
                android:textColorHint="@color/tv_hint"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/icon_arrow_right"
                />

            <View
                android:layout_width="match_parent"
                android:background="@color/line"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_cp_type"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_cp_des"
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icom_home_all_money"
                android:layout_height="16dp"/>

            <EditText
                android:id="@+id/et_cp_des"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/iv_cp_des"
                android:background="@null"
                android:hint="券使用说明（30字内）"
                android:maxLength="31"
                android:ellipsize="end"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/tv_hint"
                android:textSize="16sp"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/line"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_cp_des"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_cp_price"
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icom_home_all_money"
                android:layout_height="16dp"/>

            <EditText
                android:id="@+id/et_cp_price"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/iv_cp_price"
                android:background="@null"
                android:hint="单张券价格"
                android:inputType="numberDecimal"
                android:textColorHint="@color/tv_hint"
                android:textSize="16sp"
                android:textColor="@color/tv_black"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/line"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_cp_price"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_cp_num"
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icom_home_all_money"
                android:layout_height="16dp"/>

            <EditText
                android:id="@+id/et_cp_num"
                android:layout_width="match_parent"
                android:layout_marginRight="26dp"
                android:layout_toRightOf="@id/iv_cp_num"
                android:background="@null"
                android:inputType="number"
                android:layout_marginTop="9dp"
                android:hint="券发行总数量"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/tv_hint"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="#abaaaa"
                android:layout_toRightOf="@id/iv_cp_num"
                android:layout_below="@id/et_cp_num"
                android:layout_marginBottom="4dp"
                android:text="券领完后将提示领取完毕，不可追加，用户使用后生效"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/line"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_cp_num"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_cp_time"
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icom_home_all_money"
                android:layout_height="16dp"/>

            <EditText
                android:id="@+id/et_cp_time"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/iv_cp_time"
                android:background="@null"
                android:hint="券到期时间（如不限制时间，可空）"
                android:textColorHint="@color/tv_hint"
                android:textSize="16sp"
                android:textColor="@color/tv_black"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/line"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_cp_time"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_cp_pay"
                android:layout_width="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icom_home_all_money"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/tv_cp_pay"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/iv_cp_pay"
                android:background="@null"
                android:paddingTop="30dp"
                android:hint="消费优惠券送灵石比例"
                android:textColorHint="@color/tv_hint"
                android:textSize="16sp"
                android:paddingBottom="16dp"
                android:textColor="@color/tv_black"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp"
                android:src="@mipmap/icon_arrow_right"
                />

            <TextView
                android:id="@+id/tv_add_cp_stone_price"
                android:layout_below="@id/tv_cp_pay"
                android:layout_width="wrap_content"
                android:textColor="@color/tv_hint"
                android:layout_marginLeft="70dp"
                android:text="当前灵石行情价格："
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_add_cp_stone_pay"
                android:layout_below="@id/tv_add_cp_stone_price"
                android:layout_width="wrap_content"
                android:textColor="@color/tv_hint"
                android:layout_marginLeft="70dp"
                android:text="应付灵石总价："
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_add_cp_price"
                android:layout_below="@id/tv_add_cp_stone_pay"
                android:layout_width="wrap_content"
                android:textColor="@color/tv_hint"
                android:layout_marginLeft="70dp"
                android:text="应付券总价："
                android:layout_marginBottom="30dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/add_cp_ok"
                android:layout_width="140dp"
                android:text="确定"
                android:layout_below="@id/tv_add_cp_price"
                android:background="@drawable/shape_add_cp_ok"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_height="38dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>
